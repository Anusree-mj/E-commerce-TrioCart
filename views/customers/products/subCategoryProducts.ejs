<link rel="stylesheet" href="/stylesheets/users/productList.css">
<link rel="stylesheet" href="/stylesheets/users/cart.css">

<% if (user) { %>
    <%- include('../../partials/headers/homeHeader',{ totalCartProduct: totalCartProduct}) %>
        <%} else{ %>
            <%- include('../../partials/headers/header') %>
                <% } %>
                    <%- include('../../partials/subHeader',allCategories) %>
                        <section class="productsSctn d-flex justify-content-between ">
                            <%- include('../../partials/productsSidebar',categories) %>
                                <div>

                                    <div class="d-flex mb-3 ml-3 filterSortSctn">
                                        <!-- Sorting Options -->
                                        <div class="sorting-options">
                                            <div class="dropdown">
                                                <div class="dropbtn">
                                                    <button class="btn btn-light dropdown-toggle" type="button"
                                                        id="sortDropdown" data-toggle="dropdown" aria-haspopup="true"
                                                        aria-expanded="false">
                                                        Sort By
                                                    </button>
                                                    <div class="dropdown-content" aria-labelledby="sortDropdown">
                                                        <a class="dropdown-item subCategory"
                                                            href="/products/<%= category %>/<%= subCategory %>?q=lowestToHighest">Lowest
                                                            to
                                                            Highest</a>
                                                        <a class="dropdown-item subCategory"
                                                            href="/products/<%= category %>/<%= subCategory %>?q=highestToLowest">Highest
                                                            to
                                                            Lowest</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Filtering Options -->
                                        <div class="filtering-options">
                                            <div class="dropdown">
                                                <div class="dropdown">
                                                    <div class="dropbtn">
                                                        <button class="btn btn-light dropdown-toggle" type="button"
                                                            id="filterDropdown" data-toggle="dropdown"
                                                            aria-haspopup="true" aria-expanded="false">
                                                            Filter By
                                                        </button>
                                                        <div class="dropdown-content" aria-labelledby="filterDropdown">
                                                            <!-- size filter -->
                                                            <div class="filter-option">
                                                                <label for="size">Size:</label>
                                                                <div class="form-check">
                                                                    <input class="form-check-input" type="radio"
                                                                        name="size" id="sizeS" value="S">
                                                                    <a class="form-check-label subCategory"
                                                                        for="exampleRadios1">
                                                                        S
                                                                    </a>
                                                                </div>
                                                                <div class="form-check">
                                                                    <input class="form-check-input" type="radio"
                                                                        name="size" id="sizeM" value="M">
                                                                    <a class="form-check-label subCategory"
                                                                        for="exampleRadios1">
                                                                        M
                                                                    </a>
                                                                </div>
                                                                <div class="form-check">
                                                                    <input class="form-check-input" type="radio"
                                                                        name="size" id="sizeL" value="L">
                                                                    <a class="form-check-label subCategory"
                                                                        for="exampleRadios1">
                                                                        L
                                                                    </a>
                                                                </div>
                                                                <div class="form-check">
                                                                    <input class="form-check-input" type="radio"
                                                                        name="size" id="sizeXL" value="XL">
                                                                    <a class="form-check-label subCategory"
                                                                        for="exampleRadios1">
                                                                        XL
                                                                    </a>
                                                                </div>
                                                                <div class="form-check">
                                                                    <input class="form-check-input" type="radio"
                                                                        name="size" id="sizeXXL" value="XXL">
                                                                    <a class="form-check-label subCategory"
                                                                        for="exampleRadios1">
                                                                        XXL
                                                                    </a>
                                                                </div>

                                                            </div>
                                                            <!--price filter  -->
                                                            <div class="filter-option">
                                                                <label for="price" class="mt-3">Price:</label>
                                                                <div class="form-check">
                                                                    <input class="form-check-input" type="radio"
                                                                        name="price" id="price500" value="500">
                                                                    <a class="form-check-label subCategory"
                                                                        for="exampleRadios1">
                                                                        Under 500
                                                                    </a>
                                                                </div>
                                                                <div class="form-check">
                                                                    <input class="form-check-input" type="radio"
                                                                        name="price" id="price1000" value="1000">
                                                                    <a class="form-check-label subCategory"
                                                                        for="exampleRadios1">
                                                                        Under 1000
                                                                    </a>
                                                                </div>
                                                                <div class="form-check">
                                                                    <input class="form-check-input" type="radio"
                                                                        name="price" id="price1500" value="1500">
                                                                    <a class="form-check-label subCategory"
                                                                        for="exampleRadios1">
                                                                        Under 1500
                                                                    </a>
                                                                </div>
                                                                <div class="form-check">
                                                                    <input class="form-check-input" type="radio"
                                                                        name="price" id="price2000" value="2000">
                                                                    <a class="form-check-label subCategory"
                                                                        for="exampleRadios1">
                                                                        Under 2000
                                                                    </a>
                                                                </div>
                                                                <div class="form-check">
                                                                    <input class="form-check-input" type="radio"
                                                                        name="price" id="price2500" value="2500">
                                                                    <a class="form-check-label subCategory"
                                                                        for="exampleRadios1">
                                                                        Under 2500
                                                                    </a>
                                                                </div>
                                                                <div class="form-check">
                                                                    <input class="form-check-input" type="radio"
                                                                        name="price" id="price3000" value="3000">
                                                                    <a class="form-check-label subCategory"
                                                                        for="exampleRadios1">
                                                                        Under 3000
                                                                    </a>
                                                                </div>
                                                                <div class="form-check">
                                                                    <input class="form-check-input" type="radio"
                                                                        name="price" id="price3500" value="3500">
                                                                    <a class="form-check-label subCategory"
                                                                        for="exampleRadios1">
                                                                        Under 3500
                                                                    </a>
                                                                </div>
                                                                <div class="form-check">
                                                                    <input class="form-check-input" type="radio"
                                                                        name="price" id="price4000" value="4000">
                                                                    <a class="form-check-label subCategory"
                                                                        for="exampleRadios1">
                                                                        Under 4000
                                                                    </a>
                                                                </div>

                                                            </div>
                                                            <div
                                                                class="d-flex justify-content-center align-items-center">
                                                                <button class="btn btn-dark addFilter"
                                                                    onclick="addFilter('<%= category %>','<%= subCategory %>')">Add
                                                                    Filter</button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                    <% if (products && products.length> 0) { %>
                                        <div class="cards-section">
                                            <% products.forEach(product=>{%>

                                                <div class="col-sm-3 mb-4">
                                                    <a href="/products/<%= product._id %>">
                                                        <div class="card mycard">
                                                            <div>
                                                                <img class="img-fluid img-thumbnail "
                                                                    src="/<%= product.image %>" alt="Card image cap">
                                                            </div>
                                                            <div class="card-body" style="width: 18rem;">
                                                                <h5 class="card-title">
                                                                    <%=product.name %>
                                                                </h5>
                                                                <div class="d-flex">
                                                                    <% if (product.offerPrice===0) { %>
                                                                        <p class="card-text">
                                                                            ₹ <%= product.price %>/-
                                                                        </p>
                                                                        <%} else{ %>
                                                                            <p class="card-text original-price">
                                                                                ₹ <%=product.price %>/
                                                                            </p>

                                                                            <p class="card-text ml-2">
                                                                                ₹ <%= product.offerPrice %>/-
                                                                            </p>
                                                                            <% } %>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </a>
                                                </div>
                                                <% }) %>
                                        </div>
                                        <!-- Adding pagination controls -->
                                        <!-- Adding pagination controls -->
                                        <div class="d-flex justify-content-center align-items-center pageNav mt-4">
                                            <nav aria-label="Page navigation">
                                                <ul class="pagination">
                                                    <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                                                        <a class="page-link"
                                                            href="/products/<%= category %>/<%= subCategory %>?page=<%= currentPage - 1 %>"
                                                            aria-label="Previous">
                                                            <span aria-hidden="true">&laquo;</span>
                                                            <span class="sr-only">Previous</span>
                                                        </a>
                                                    </li>
                                                    <% for (let i=1; i <=totalPages; i++) { %>
                                                        <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                                            <a class="page-link"
                                                                href="/products/<%= category %>/<%= subCategory %>?page=<%= i %>">
                                                                <%= i %>
                                                            </a>
                                                        </li>
                                                        <% } %>
                                                            <li
                                                                class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                                                                <a class="page-link"
                                                                    href="/products/<%= category %>/<%= subCategory %>?page=<%= currentPage + 1 %>"
                                                                    aria-label="Next">
                                                                    <span aria-hidden="true">&raquo;</span>
                                                                    <span class="sr-only">Next</span>
                                                                </a>
                                                            </li>
                                                </ul>
                                            </nav>
                                        </div>
                                </div>
                                <%} else{ %>
                                    <div class="emptyCart" style="width: 80rem; max-width: 100%;">
                                        <img class="emptyImg" src="/images/home/emptyCart.svg" alt="">
                                        <div class="d-flex flex-column justify-content-center align-items-center ">
                                            <h3 class="emptyHead">Product not found</h3>

                                            <a href="/" type="button" class="btn btn-dark cartbtn"
                                                style="width: 20rem;">Continue
                                                Shopping</a>

                                        </div>
                                        <% } %>
                        </section>
                        <%- include('../../partials/footer') %>
                            <script src="/javascripts/users/subcategory.js"></script>