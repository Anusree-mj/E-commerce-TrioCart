<link rel="stylesheet" href="/stylesheets/admin/addProducts.css">
<%- include('../partials/adminHeaders') %>

    <div class="row align-items-center justify-content-center" style="height: 70vh;">
        <div class="addForm">
            <h2 class="head">Edit Subcategory</h2>

            <div class="form-group">
                <label for="exampleFormControlSelect1">Category</label>
                <input type="text" class="form-control" name="subCategory" 
                placeholder="Product subCategory"  value="<%= category %>" readonly>               
            </div>

            <label class="label" for="subCategory">SubCategory</label>
            <input type="text" class="form-control" name="subCategory" id="subCategoryEdit"
                placeholder="Product subCategory" onclick="clearSpan('subCategory_editSpan')" value="<%= subCategory %>">
                <span id="subCategory_editSpan" class="span"></span>
            <div class="button">
                <button class="addProduct_button btn btn-success btn-lg btn-block" type="button"
                    onclick="editCategory('<%= category %>','<%= subCategory %>')">Edit</button>
            </div>
        </div>
    </div>
    <%- include('../partials/loginsFooter') %>
    <script src="/javascripts/admin/adminCategory.js"></script>