<link rel="stylesheet" href="/stylesheets/admin/addProducts.css">
<%- include('../partials/adminHeaders') %>

<div class="row align-items-center justify-content-center">
    <div class="addForm">
        <h2 class="head">Block or Unblock User</h2>
        <label class="label" for="name">Name</label>
        <input type="text" class="form-control" name="name" id="name" value="<%= user.name%>" readonly>

        <label class="label" for="email">Email</label>
        <input type="email" class="form-control" name="email" id="email" value="<%= user.email%>" readonly>

        <label class="label" for="phone">Phone number</label>
        <input type="number" class="form-control" name="phone" id="phone" value="<%= user.phone %>" readonly>

        <label class="label" for="address">Address</label>
        <textarea class="form-control" id="address" rows="3"  readonly><%= user.address %></textarea>

        <label class="label" for="name">Block or Unblock</label>
        <input type="text" class="form-control" name="isBlocked" id="isBlocked" value="<%= user.isBlocked %>">

        <div class="button">
            <button class="addProduct_button btn btn-success btn-lg btn-block" type="button"
                onclick="editUser('<%= user._id %>')">Edit</button>
        </div>
    </div>
</div>
<script src="/javascripts/admin/updateProduct.js"></script>
