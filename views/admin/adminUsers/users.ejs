<link rel="stylesheet" href="/stylesheets/admin/adminProducts.css">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

<%- include('../../partials/headers/adminHeaders') %>

    <section>
        <div style="padding: 2rem;"></div>
        <div class="container">
            <div class="table-responsive">
                <table class="table table-striped" id="productsTable">
                    <thead>
                        <tr>
                            <th scope="col">No</th>
                            <th scope="col">Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">Phone number</th>
                            <th scope="col">Status</th>
                            <th scope="col">Block</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach((user, index)=> { %>
                            <tr>
                                <th scope="row">
                                    <%= index + 1 %>
                                </th>
                                <td>
                                    <%= user.name%>
                                </td>
                                <td>
                                    <%= user.email%>
                                </td>
                                <td>
                                    <%= user.phone%>
                                </td>

                                <td>
                                    <% if (user.isBlocked) { %>
                                        <p>Blocked<p onclick="unblockUser('<%= user._id%>','<%= user.name%>')"><img src="/images/navbar/undo.png" alt="edit" style="width: 1rem;"></p></p>
                                     <% } else { %>
                                        <p>Active</p>
                                     <% } %>
                                     
                                </td>
                                <td>
                                    <p onclick="blockUser('<%= user._id%>','<%= user.name%>')"><img
                                            src="/images/home/block.png" alt="edit" style="width: 1.5rem;"></p>
                                </td>
                            </tr>
                            <% })%>
                    </tbody>
                </table>
            </div>
        </div>
    </section>
    <script src="/javascripts/admin/adminUsers.js"></script>