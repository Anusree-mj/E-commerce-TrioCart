<link rel="stylesheet" href="/stylesheets/admin/adminProducts.css">
<%- include('../../partials/headers/adminHeaders') %>

    <section>
        <div class="container mt-4">
            <div class="table-responsive">
                <table class="table table-striped" id="productsTable">
                    <thead>
                        <tr>
                            <th scope="col" class="tno">No</th>
                            <th scope="col" class="thead">Image</th>
                            <th scope="col" class="ttitle">Tittle</th>
                            <th scope="col" class="thead">Category</th>
                            <th scope="col" class="thead">SubCategory</th>
                            <th scope="col" class="thead">Size & Stock</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% products.forEach((product, index)=> { %>
                            <tr>
                                <th scope="row">
                                    <%= index + 1 %>
                                </th>
                                <td><img style="width: 50px;" src="/<%= product.image %>" alt="product"></td>
                                <td>
                                    <%= product.name%>
                                </td>
                                <td>
                                    <%= product.category%>
                                </td>
                                <td>
                                    <%= product.subCategory%>
                                <td>
                                    <% product.sizesStock.forEach((sizeStock)=> { %>
                                        <p>
                                            <%= sizeStock.size %>: <%= sizeStock.count %>
                                                    <a href="/admin/stock/<%= product._id %>/<%= sizeStock.size %>">
                                                        <img src="/images/navbar/edit.png" alt="edit"
                                                            style="width: 1rem;"></a>
                                        </p>
                                        <% })%>
                                </td>
                                </td>
                            </tr>
                            <% })%>
                    </tbody>
                </table>
            </div>
        </div>
    </section>
    <%- include('../../partials/loginsFooter') %>
        <script src="/javascripts/admin/productDlt.js"></script>